<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.10rem 5rem;
    background-color: white;
    border-bottom: 2px solid #01833d;
  }

  .izquierda {
    display: flex;
    align-items: center;
    gap: 4rem;
  }

  .linksjeje {
    display: flex;
    gap: 2rem;
  }

  .linksjeje a {
    color: black;
    font-size: 18px;
    text-decoration: none;
    font-weight: bold;
  }

  .botonesjiji {
    display: flex;
    gap: 1rem;
  }

  .verde {
    background-color: #01833d;
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: bold;
    border: none;
  }

  .blanco {
    background-color: rgb(191, 240, 186);
    color: #01833d;
    border: 2px solid #01833d;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: bold;
  }
</style>
